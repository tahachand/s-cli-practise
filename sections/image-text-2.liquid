<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
     .flex-block{
        display: flex;
        justify-content: center;
        margin: 0 auto;
        width: 100%;
        max-width: 1200px;
     }
     .sec-image{
        width: 50%;
        padding: 0 20px;
     }
     .sec-image img{
        width: 100%;
     }
     .text-side{
        width: 50%;
        text-align: center;
     }
     .text-side button{
        padding: 10px 20px;
     }
     @media only screen and (max-width: 767px){
        .flex-block{
            flex-direction: column;
            padding: 20px 10px;
        }
        .sec-image{
            width: 100%;
            padding: 10px 0;
        }
        .text-side{
            width: 100%;
        }
     }

</style>
<section>
    <div class="main-block">
   <h1>{{ section.settings.sec-title }}</h1>
     <div class="flex-block">
        {% for block in section.blocks %}
            {%  assign product = block.settings.product %} 
        <div class="box">
            <div class="box-image">
            <img src="{{ product.image |  img_url: 'master' }}" alt="">
            </div>
            <h5>{{ product.title }}</h5>
            <p>{{ product.price }}</p>
            <a href="{{ block.settings.btn-url }}">
                <button>Buy Now</button>
            </a>
        </div>
        {% endfor %}
     </div>
    </div>
</section>

{% schema %}
{
    "name": "image-text-2",
    "settings": [
        {
            "type": "text",
            "id": "sec-title",
            "label": "Section Title"
        }
        ],
        "blocks":[
            {
                "type": "product",
                "name": "Add Product",
                "settings":[
                   {
                    "type": "product",
                    "id": "product",
                    "label": "Add Product"
                   }
        ]
}
        ],
        "presets": [
            {
                "name": "image-text-2"
            }
        ]
}
{% endschema %}