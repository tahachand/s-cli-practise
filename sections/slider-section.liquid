    "name": "Slider section",
    "settings": [
        
        ],
        "blocks": [
            {
                "type": "text",
                "name":"Slides",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "slide-img",
                        "label": "Slide Image"
                    },
                    {
                        "type": "text",
                        "id": "slide-title",
                        "label": "Slide Title"
                    },
                    {
                        "type": "textarea",
                        "id": "slide-detail",
                        "label": "Slide Detail"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Slider section"
            }
        ]
}
{% endschema %}