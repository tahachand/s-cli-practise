<style>
  *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
</style>
<section>
  <div class="main-block-d10" >
    <div class="flex-block-d10" >
      <div class="content-block" >
        <h1>{{ section.settings.sec-title }}</h1>
      </div>
      <div class="boxes-block" >
        {% for block in section.blocks limit:4 %}
         <div class="box" >
           <div class="box-image" >
             <img src="{{ block.settings.block-img | img_url: 'master' }} ">
           </div>
           <p>{{ block.settings.block-text }}</p>
         </div>
          {% endfor %}
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Glow Bundle",
    "settings": [
      {
        "type": "text",
        "id": "sec-title",
        "label": "Section Title"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "block-img",
            "label": "Add Image"
          },
          {
            "type": "text",
            "id": "block-text",
            "label": "Add Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Glow Bundle"
      }
    ]
  }
{% endschema %}