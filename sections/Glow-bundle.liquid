<style>
  *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .main-block-d10{
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
        padding: 30px 0;
  }
  .flex-block-d10{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    width: 100%;
  }
  .content-block{
        width: 58%;
    padding: 0px 75px 0 0;
  }
  .content-block h1{
    font-weight: 600;
    line-height: 1.1;
    font-size: 50px;
    color: #0b1128;
  }
  .content-block h1 span{
        background: linear-gradient(to right, #4222de 0%, #659bff 50%, #7ff6e8);
    -webkit-background-clip: text;
        color: transparent;
  }
  .content-block p {
    line-height: 1.7;
    font-size: 20px;
    color: #0b1128;
}
  .content-block a{
     background: linear-gradient(to right, #4222de 0%, #659bff 50%, #7ff6e8);
    -webkit-background-clip: text;
        color: transparent;
     text-decoration: none;
        font-size: 20px;
  }
  .boxes-block{
    width: 35%;
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    flex-wrap: wrap;
  }
  .box{
    width: 45%;
        background: #FFFFFF;
    box-shadow: 4px 4px 20px #b8b1dc;
    border-radius: 15px;
    max-width: 190px;
    max-height: 170px;
    margin-bottom: 20px;
    border: none;
  }
  .box-image-d10{
        background: linear-gradient(to right, #4222de 0%, #659bff 50%, #7ff6e8);
    margin-bottom: 25px;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 25px auto;
  }
  .box-image-d10 img{
    width: 100%;
    max-width: 30px;
  }
  .boxes-block .box p{
    font-size: 18px;
    padding: 0 10px;
    line-height: 24px;
  }
  @media (max-width: 1001px){
    .content-block {
    width: 58%;
    padding: 0px 20px 0 0;
}
    .boxes-block {
    width: 40%;
    }
  }
  @media (max-width: 850px){
    .flex-block-d10{
      flex-direction: column;
    }
    .content-block {
    width: 100%;
          padding: 0px 20px 0 10px;
  }
        .boxes-block {
        width: 100%;
    }
    .box{
          max-width: 100%;
    }
  }
  @media (max-width: 767px){
    .main-block-d10{
       padding: 0 0 30px 0;
    }
    .flex-block-d10{
      flex-direction: column;
    }
    .content-block {
    width: 100%;
          padding: 0px 20px 0 10px;
  }
    .content-block h1 {
              font-size: 33px;
        padding-right: 30px;
    }
    .boxes-block{
      width: 100%;
    }
    .box{
          max-width: 100%;
    }
  }
    @media (max-width: 391px){
          .content-block h1 {
            font-size: 25px;
          }
      .box{
        width: 100%;
      }
      .boxes-block .box p {
       font-size: 16px;
      }
    }
</style>
<section>
  <div class="main-block-d10" >
    <div class="flex-block-d10" >
      <div class="content-block" >
        <h1>{{ section.settings.sec-title }}</h1>
        <p>{{ section.settings.content }}</p>
        <a href="{{ section.settings.btn-url }}" >{{ section.settings.button-text }}</a>
      </div>
      <div class="boxes-block" >
        {% for block in section.blocks limit:4 %}
         <div class="box" >
           <div class="box-image-d10" >
             <img src="{{ block.settings.block-img | img_url: 'master' }} ">
           </div>
           <p>{{ block.settings.block-text }}</p>
         </div>
          {% endfor %}
      </div>
    </div>
  </div>
</section>
{% schema %}
  {
    "name": "Glow Bundle",
    "settings": [
      {
        "type": "text",
        "id": "sec-title",
        "label": "Section Title"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Section content"
      },
      {
        "type": "text",
        "id": "button-text",
        "label": "Button"
      },
      {
        "type": "url",
        "id": "btn-url",
        "label": "Button URL"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "block-img",
            "label": "Add Image"
          },
          {
            "type": "text",
            "id": "block-text",
            "label": "Add Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Glow Bundle"
      }
    ]
  }
{% endschema %}