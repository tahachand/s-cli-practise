<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    .sec-main{
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px 0;
    }
    .sec-main h1 {
    padding: 15px 0;
}
    .main-flex-2{
        display: flex;
        justify-content: space-between;
        margin: 0 auto;
        width: 100%;
    }
    .flex-box-2{
        width: 32%;
        /* margin: 0 15px; */
    }
    .box-image-2 {
    position: relative;
    width: 100%;
    max-width: 360px;
    height: 360px;
    display: block;
    overflow: hidden;
    transition: all 0.5s;
}
.box-img-2 {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transition: all 0.5s;
    transform-origin: center;
}

.flex-box-2:hover .box-image-2 {
    /* transform: scale(1.2); Adjust the scale value as needed */
    border-radius: 50% !important;
}
.flex-box-2:hover .box-img-2{
    transform: scale(1.2); /* Adjust the scale value as needed */
    /* border-radius: 50% !important; */
}
.box-detail-2 h2, p{
    padding: 10px 0;
}
@media only screen and (max-width: 767px){
    .sec-main h1{
        text-align: center;
    }
    .main-flex-2{
        flex-direction: column;
        /* align-items: center; */
        padding: 0 20px;
    }
    
}
</style>
<section>
    <div class="sec-main">
        <h1>{{ section.settings.sec-title }}</h1>
        <div class="main-flex-2">
            {% for block in section.blocks limit:3 %}
            <div class="flex-box-2">
                 <div class="box-image-2">
                    <img class="box-img-2" src="{{ block.settings.box-image |  img_url: 'master' }}" alt="">
                 </div>
                 <div class="box-detail-2">
                    <h2>{{ block.settings.image-title }}</h2>
                    <p>{{ block.settings.image-detail }}</p>
                 </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
    "name": "Image Transition",
    "settings": [
        {
            "type": "text",
            "id": "sec-title",
            "label": "Section Title"
        }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "Add block",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "box-image",
                        "label": "Box image"
                    },
                    {
                        "type": "text",
                        "id": "image-title",
                        "label": "Image Title"
                    },
                    {
                        "type": "textarea",
                        "id": "image-detail",
                        "label": "Image Detail"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image Transition"
            }
        ]
}
{% endschema %}